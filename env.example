# === SUPABASE ===
# Получите эти значения из вашего проекта Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE=your-service-role-key

# === OPENAI ===
# Получите API ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# === BASE URL ===
# URL вашего приложения (для production используйте домен)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# === TELEGRAM BOT (опционально) ===
# Токен бота от @BotFather
TG_BOT_TOKEN=your-telegram-bot-token

# === STRIPE (опционально) ===
# Получите ключи на https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PRICE_PRO_MONTHLY=price_your-monthly-price-id
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# === UPSTASH REDIS (опционально) ===
# Для rate limiting, получите на https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# === FEATURES ===
# Включить/выключить платежи
NEXT_PUBLIC_FEATURE_PAYMENTS=true
